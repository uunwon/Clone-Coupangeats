<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingBottom="1dp"
    android:background="@color/gray_200">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/store_test_menu_title"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/store_test_menu_price"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/store_test_menu_price_unit"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/menu_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingEnd="10dp"
            android:gravity="center|start"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/store_test_menu_detail"
            android:textColor="@color/gray_500"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:layout_gravity="top"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="30dp"
        android:layout_weight="1"
        android:src="@drawable/test_store_menu"
        android:background="@color/white"/>

</LinearLayout>