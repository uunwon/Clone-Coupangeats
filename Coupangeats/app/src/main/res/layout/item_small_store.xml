<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="200dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/small_store_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_white" />

    <TextView
        android:id="@+id/small_store_text_title"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:minHeight="0dp"
        android:ellipsize="end"
        android:text="@string/store_test_title"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_star_rating" />
        <TextView
            android:id="@+id/small_store_text_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:gravity="center"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="@string/store_test_star_rating"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/small_store_text_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="@string/store_test_review_count"
            android:textSize="11sp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="ã†"
            android:textSize="11sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/small_store_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="@string/store_test_location"
            android:textSize="11sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/small_store_text_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="@string/store_test_delivery"
            android:textSize="11sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/small_store_text_delivery_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:minHeight="0dp"
            android:ellipsize="end"
            android:text="@string/store_test_delivery_tip"
            android:textSize="11sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>