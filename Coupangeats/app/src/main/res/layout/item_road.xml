<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/road_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_text_road"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/road_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="0.5dp"
            android:paddingBottom="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:gravity="center"
            android:text="@string/address_text_road_title"
            android:textColor="@color/blue_600"
            android:textStyle="bold"
            android:textSize="13sp"
            app:backgroundTint="@null"
            android:background="@drawable/button_default_gray"/>

        <TextView
            android:id="@+id/road_text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/address_text_road_detail"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/gray_500"/>
    </LinearLayout>

</LinearLayout>