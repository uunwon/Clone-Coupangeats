<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="90dp"
    android:layout_marginTop="18dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/button_default_gray">

    <ImageView
        android:id="@+id/small_review_image_view"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/test_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/small_review_text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="@string/store_small_review_text" />

        <TextView
            android:id="@+id/small_review_text_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="12dp"
            android:text="@string/store_small_review_star_rating"
            android:textSize="14sp"
            android:textColor="@color/yellow" />
    </LinearLayout>


</LinearLayout>