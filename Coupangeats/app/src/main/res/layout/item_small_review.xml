<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="90dp"
    android:layout_marginTop="18dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/button_default_gray">

    <ImageView
        android:id="@+id/small_review_image_view"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_favorite_store"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/small_review_text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="@string/store_small_review_text" />


        <RatingBar
            android:id="@+id/small_review_text_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="12dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="false"
            android:progressTint="@color/yellow_a700"
            android:secondaryProgressTint="@color/transparency"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>


</LinearLayout>