        android:bottom="0.7dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/gray_100" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>

</layer-list>
