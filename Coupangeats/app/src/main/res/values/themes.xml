<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- No Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Transparency_DialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- option menu 간격 줄이기 -->
    <style name="MenuItemStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">7dip</item>
    </style>

    <!-- scroll 되기 전 text color -->
    <style name="CollapsingToolbar.TitleText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/transparency</item>
    </style>

    <!-- scroll 된 후 text color -->
    <style name="Toolbar.TitleText" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/transparency</item>
    </style>

    <style name="TabItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Store activity theme. -->
    <style name="StoreAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/transparency</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="actionButtonStyle">@style/MenuItemStyle</item>
    </style>

    <!-- Menu activity theme. -->
    <style name="MenuAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/transparency</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Favorite activity theme. -->
    <style name="FavoriteAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionMenuTextColor">@color/blue_300</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>